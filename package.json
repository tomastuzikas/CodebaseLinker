{
  "name": "cotext",
  "version": "1.0.0",
  "description": "A CLI tool to aggregate codebase files for context generation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "cotext": "./bin/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --outDir dist --metafile --no-splitting",
    "start": "tsx src/index.ts",
    "dev:init": "tsx src/index.ts init",
    "test:built": "node dist/index.js",
    "test:example": "tsx src/index.ts -c ./example/.cotext/cotext.config.ts",
    "postbuild": "node src/scripts/postbuild.mjs",
    "prepublishOnly": "pnpm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "cli",
    "codebase",
    "context",
    "aggregator"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "cosmiconfig": "^9.0.0",
    "esbuild": "^0.23.0",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "ora": "^6.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.12",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
