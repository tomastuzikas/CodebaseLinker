{
  "name": "cotext",
  "version": "1.0.0",
  "description": "A CLI tool to aggregate codebase files for context generation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "cotext": "./bin/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts -v -d -c .cotext/cotext.config.ts",
    "dev:old": "tsx src/index.ts -v -d -c .cotext/cotext.config.ts",
    "dev:silent": "tsx src/index.ts -c .cotext/cotext.config.ts",
    "bin": "tsx run_binary.ts",
    "build_bin": "go build -o bin/mybinary.exe main.go",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --outDir dist --metafile --no-splitting",
    "start": "tsx src/index.ts",
    "dev:init": "tsx src/index.ts init",
    "postbuild": "node src/scripts/postbuild.mjs",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "cli",
    "codebase",
    "context",
    "aggregator"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "cosmiconfig": "^9.0.0",
    "esbuild": "^0.23.0",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1",
    "ora": "^6.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.12",
    "@vitest/ui": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
